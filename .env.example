# Discord bot (safe default)
# DISCORD_MODE options: test | dry-run | prod
DISCORD_MODE=test
# DISCORD_ALLOW_PROD options: 0 | 1 (required for DISCORD_MODE=prod)
DISCORD_ALLOW_PROD=0

# Test environment (set IDs for test/dry-run)
DISCORD_TEST_GUILD_ID=
DISCORD_TEST_NOTIFY_CHANNEL_ID=
# Optional: archive channel for accepted applications (recommended)
DISCORD_TEST_ARCHIVE_CHANNEL_ID=
# Delay (minutes) before auto-archiving Accepted applications. Use 0 for immediate.
DISCORD_ACCEPTED_ARCHIVE_DELAY_MINUTES=30

# Production (fill in when ready to go live)
DISCORD_GUILD_ID=
DISCORD_NOTIFY_CHANNEL_ID=
DISCORD_ARCHIVE_CHANNEL_ID=

# Roles (by name)
DISCORD_ALLOWED_ROLE_NAMES=RRO,RRO ICs
DISCORD_OVERRIDE_ROLE_NAMES=RRO ICs,REME Discord
DISCORD_THREAD_AUTOADD_ROLE_NAMES=RRO,RRO ICs

# Bot token
DISCORD_BOT_TOKEN=

# Discourse
DISCOURSE_BASE_URL=https://discourse.16aa.net
DISCOURSE_APPLICATIONS_CATEGORY_ID=328
# Optional: separate applications category for DISCORD_MODE=test.
DISCOURSE_TEST_APPLICATIONS_CATEGORY_ID=
# Cache TTL for Discourse topic snapshots (seconds). Set 0 to disable cache.
DISCOURSE_TOPIC_CACHE_TTL_SECONDS=300
# Use either a single secret...
DISCOURSE_WEBHOOK_SECRET=
# Set to 1 to enable verbose signature verification logs.
DISCOURSE_SIGNATURE_DEBUG=0
# ...or multiple (comma-separated) if you have multiple Discourse webhooks hitting the same Payload URL:
# DISCOURSE_WEBHOOK_SECRETS=secret1,secret2

# Needed for Discord -> Discourse tag updates
DISCOURSE_API_KEY=
DISCOURSE_API_USER=

# Web server
LISTEN_HOST=0.0.0.0
LISTEN_PORT=5055

# Logging
# LOG_LEVEL options: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO
# LOG_FILE=logs/bot.log
# LOG_MAX_BYTES=10485760
# LOG_BACKUP_COUNT=5
# LOG_TO_CONSOLE=1
