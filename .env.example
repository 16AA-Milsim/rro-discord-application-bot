# Discord bot (safe default)
DISCORD_MODE=test
DISCORD_ALLOW_PROD=0

# Test environment (default IDs provided)
DISCORD_TEST_GUILD_ID=1068904351692771480
DISCORD_TEST_NOTIFY_CHANNEL_ID=1460263195292864552
# Optional: archive channel for accepted applications (recommended)
DISCORD_TEST_ARCHIVE_CHANNEL_ID=

# Production (fill in when ready to go live)
# DISCORD_GUILD_ID=
# DISCORD_NOTIFY_CHANNEL_ID=1455133649883103273

# Roles (by name)
DISCORD_ALLOWED_ROLE_NAMES=RRO,RRO ICs
DISCORD_OVERRIDE_ROLE_NAMES=RRO ICs,REME Discord

# Bot token
DISCORD_BOT_TOKEN=

# Discourse
DISCOURSE_BASE_URL=https://discourse.16aa.net
# Use either a single secret...
DISCOURSE_WEBHOOK_SECRET=
# ...or multiple (comma-separated) if you have multiple Discourse webhooks hitting the same Payload URL:
# DISCOURSE_WEBHOOK_SECRETS=secret1,secret2

# Needed for Discord -> Discourse tag updates
DISCOURSE_API_KEY=
DISCOURSE_API_USER=

# Web server
LISTEN_HOST=0.0.0.0
LISTEN_PORT=5055
